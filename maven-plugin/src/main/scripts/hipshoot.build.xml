<project>

  <target name="help">
    <echo message="Hipshoot help...." />
  </target>

  <target name="tomcat-install">
    <echo message="Installing Tomcat ..." />

    <echo file="target/tomcat-install.sh">
cd /tmp
wget http://apache.mirrors.pair.com/tomcat/tomcat-8/v8.0.35/bin/apache-tomcat-8.0.35.tar.gz
cd /usr/local
sudo tar xvfz /tmp/apache-tomcat-8.0.35.tar.gz
rm /tmp/apache-tomcat-8.0.35.tar.gz
sudo ln -s /usr/local/apache-tomcat-8.0.35 /usr/local/tomcat
    </echo>

    <sshexec host="server1"
             username="cms" password="cms"
             commandResource="target/tomcat-install.sh" />

    <echo file="target/catalina-base-init.sh">
cd /opt/cms
mkdir tomcat
mkdir tomcat/bin
    </echo>

    <sshexec host="server1"
             username="cms" password="cms"
             commandResource="target/catalina-base-init.sh" />

  </target>

  <target name="tomcat-start">
    <echo message="Starting Tomcat ..." />
    <sshexec host="server1"
             username="cms" password="cms"
             command="serivce cms start" />
  </target>

  <target name="tomcat-stop">
    <echo message="Stopping Tomcat ..." />
    <sshexec host="server1"
             username="cms" password="cms"
             command="serivce cms stop" />
  </target>

  <target name="hippo-install">
    <echo message="Installing Hippo ..." />
    <scp file="target/*.tar.gz"
         todir="cms@server1:/tmp" />
    <sshexec host="server1"
             username="cms" password="cms"
             command="rm /tmp/*.tar.gz" />
  </target>

</project>